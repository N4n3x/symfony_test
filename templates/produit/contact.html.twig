{% extends 'base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Contact pour le produit: {{ produit.titre }}</h1>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                {{ form_start(form ,{'method' : 'post','name' : 'produitContact'}) }}
                    <div class="row">
                        {{ form_label(form.mail_client) }}
                        {{ form_widget(form.mail_client) }}
                    </div>
                    <div class="row">
                        {{ form_label(form.corps) }}
                        {{ form_widget(form.corps) }}
                    </div>

                    <input type="submit" value="Envoyer">
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>

            <div class="col-md-4"></div>
        </div>

    </div>
{% endblock %}



